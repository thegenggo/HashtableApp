<Window x:Class="HashtableApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HashtableApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBox x:Name="txtKey" 
             Margin="0,0,0,10"
             Text="Key"/>
            <TextBox x:Name="txtValue" 
             Margin="0,0,0,10"
             Text="Value"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Add"
                Margin="0,0,5,0"
                Width="60" Height="30" Click="Add_Click"/>
                <Button Content="Remove"
                Margin="5,0"
                Width="60" Height="30" Click="Remove_Click"/>
                <Button Content="Show All"
                Margin="5,0,0,0"
                Width="60" Height="30" Click="ShowAll_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
